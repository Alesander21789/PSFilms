<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Toolbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_toolbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Toolbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Toolbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Toolbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Toolbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Toolbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_toolbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_toolbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Toolbar</item>
        
        
    </style>

    <style name="ActionBar.Solid.Toolbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_toolbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_toolbar</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_toolbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Toolbar</item>
    </style>

    <style name="ActionBar.Transparent.Toolbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_toolbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Toolbar</item>
    </style>

    <style name="PopupMenu.Toolbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_toolbar</item>	
    </style>

    <style name="DropDownListView.Toolbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_toolbar</item>
    </style>

    <style name="ActionBarTabStyle.Toolbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_toolbar</item>
    </style>

    <style name="DropDownNav.Toolbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_toolbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_toolbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_toolbar</item>
    </style>
    
    <style name="ProgressBar.Toolbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_toolbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Toolbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_toolbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Toolbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Toolbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Toolbar</item>
    </style>

</resources>