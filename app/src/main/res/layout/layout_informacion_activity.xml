<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdCordinatorLayout_Informacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Informacion">

    <include layout="@layout/layout_informacion_bottomsheet_activity" />

    <android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/llLinearLayout_Informacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imCaratula_Informacion"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/venon"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="56dp" />


        <HorizontalScrollView
            android:id="@+id/hsvHorizonalScroll_Informacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_informacion"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="350dp" />
        </HorizontalScrollView>


    </android.widget.LinearLayout>
</android.support.design.widget.CoordinatorLayout>